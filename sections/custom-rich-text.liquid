{{ 'custom-rich-text.css' | asset_url | stylesheet_tag }}

<style>
  @media screen and (min-width:750px){
      .padding-top--{{section.id}}{
          padding-top:{{section.settings.padding_top}}px;
          padding-bottom:{{section.settings.padding_bottom}}px;
      }
  }

  .padding-top--{{section.id}}{
      padding-top:{{section.settings.padding_top | times:0.75 |  round:0}}px;
      padding-bottom:{{section.settings.padding_bottom | times:0.75 |  round:0}}px;
  }
</style>

<div class="custom-rich-text padding--{{section.id}} padding--{{section.id}}">
  <div
    class=" {% unless section.settings.full_width %} page-width {% endunless %} color-{{ section.settings.color_scheme }}"
  >
    <div class="rich-text__wrapper rich-text__wrapper--{{section.settings.desktop_content_position}}">
      <div class="rich-text__block {{section.settings.content_alignment}}">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'preHeading' %}
              <div class="h3 {{section.settings.content_alignment}} rich-text__pre-heading">
                {{ block.settings.pre_heading }}
              </div>
            {% when 'heading' %}
              <div class="rich-text__heading {{block.settings.heading_size}}">
                {{ block.settings.heading }}
              </div>
            {% when 'buttons' %}
              <div class="rich-text__button-wrapper">
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}

                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {% endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom rich text",
  "tag": "section",
  "class": "custom-rich-text section",
  "settings": [
    {
      "type": "select",
      "label": "Desktop content position",
      "id": "desktop_content_position",
      "default": "center",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    {
      "type": "select",
      "label": "Content alignment",
      "id": "content_alignment",
      "default": "center",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    {
      "type": "color_scheme",
      "label": "Color scheme",
      "id": "color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "label": "Make section full width",
      "default": false,
      "id": "full_width"
    },
    {
      "type": "range",
      "label": "Padding top",
      "id": "padding_top",
      "default": 0,
      "min": 0,
      "unit": "px",
      "max": 100,
      "step": 4
    },
    {
      "type": "range",
      "label": "Padding bottom",
      "id": "padding_bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "preHeading",
      "name": "Pre Heading",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "label": "Pre Heading",
          "id": "pre_heading",
          "default": "What You Wear"
        }
      ]
    },
    {
      "name": "Heading",
      "type": "heading",
      "limit": 3,
      "settings": [
        {
          "type": "inline_richtext",
          "label": "Heading",
          "id": "heading",
          "default": "Talk about your brand"
        },
        {
          "type": "select",
          "label": "Heading size",
          "id": "heading_size",
          "options": [
            {
              "label": "Small",
              "value": "h2"
            },
            {
              "label": "Medium",
              "value": "h1"
            },
            {
              "label": "Large",
              "value": "h0"
            },
            {
              "label": "Extra Large",
              "value": "hxl"
            }
          ]
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "First button label",
          "info": "leave the button blank to hide the button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "URL"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Second button label",
          "info": "leave the button blank to hide the button"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "URL"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_2",
          "default": true,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom rich text"
    }
  ]
}
{% endschema %}
